<title>Posts timeline</title>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">	
	<h2 class="display-4">Posts timeline</h2>
</div>
<div class="container">
	<% @posts.each do |post| %>
		<div class="alert alert-dark" role="alert"> 
			<%= post['post'] %> <hr/>
			By: <strong><i><%= post['author'] %></i></strong> on: <%= post['created_date'] %> <br/>
			<a href="/post-details/<%= post['id'] %>">#<%= post['id'] %> comments</a>
		</div> 
	<% end %>
</div>		












