<title>Post details</title>

<div class="container">	
	<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">	
		<h2 class="display-4"><strong>Post #<%= params[:post_id] %></strong></h2>
	</div>
	<div class="alert alert-dark">
		<%= @single_post['post'] %> <hr/>
		By: <strong><i><%= @single_post['author'] %></i></strong> on: <%= @single_post['created_date'] %> <br/>
	</div>
</div>

<div class="container">
	<h4>Comments:</h4>
<div class="container">
	<% @comments.each do |comment| %>
		<div class="alert alert-info"> 
			<%= comment['comment'] %> <hr/>
			By: <strong><i><%= comment['comment_author'] %></i></strong> on: <%= comment['created_date'] %> <br/>
		</div> 
	<% end %>
	</div>
</div>	

<div class="container">
	<p>
		<form action="/post-details/<%= @single_post['id'] %>" method="POST">
			<div class="form-group">
				<input required name="comment_author" type="text" class="form-control" id="exampleInputEmail1" placeholder="Nickname:">
			</div>
			<div class="form-group">
				<textarea required name="comment" rows="9" class="form-control" placeholder="Add comment here:"></textarea>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Comment</button>
			</div>
		</form>
	</p>
</div>
